{
"manifest_version": 3,
"name": "Cash Application Assistant",
"version": "3.0.0",
"description": "Shows overdue invoices (with age), unused payments, and suggests matches.",
"permissions": [
  "activeTab",
  "scripting",
  "downloads"
],
"background": {
"service_worker": "background.js"
},
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "images/icon16.png",
"48": "images/icon48.png",
"128": "images/icon128.png"
}
},
"icons": {
"16": "images/icon16.png",
"48": "images/icon48.png",
"128": "images/icon128.png"
}
}